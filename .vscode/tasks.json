{
  "tasks": [
    {
      "label": "build debug",
      "type": "process",
      "command": "make",
      "args": [
        "PLATFORM=PLATFORM_DESKTOP",
        "BUILD_MODE=DEBUG",
        "PROJECT_NAME=${fileBasenameNoExtension}",
        "OBJS=${workspaceFolder}/*.cpp"
      ],
      "windows": {
        "command": "mingw32-make.exe",
        "args": [
          "RAYLIB_PATH=C:/raylib/raylib",
          "PROJECT_NAME=${fileBasenameNoExtension}",
          "OBJS=${workspaceFolder}/*.cpp",
          "BUILD_MODE=DEBUG"
        ]
      }
    },
    {
      "label": "build release",
      "type": "process",
      "command": "make",
      "args": [
        "PLATFORM=PLATFORM_DESKTOP",
        "PROJECT_NAME=${fileBasenameNoExtension}",
        "OBJS=${workspaceFolder}/*.cpp"
      ],
      "windows": {
        "command": "mingw32-make.exe",
        "args": [
          "RAYLIB_PATH=C:/raylib/raylib",
          "PROJECT_NAME=${fileBasenameNoExtension}",
          "OBJS=${workspaceFolder}/*.cpp",
        ]
      }
    }
  ],
  "version": "2.0.0"
}